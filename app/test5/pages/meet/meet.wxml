<view>
	<block wx:for="{{meet}}" wx:key="*this">
		<swiper indicator-dots="true	" autoplay="true" interval="5000" duration="2000">
			<swiper-item>
				<image src="{{item.img1}}"></image>
			</swiper-item>
			<swiper-item>
				<image src="{{item.img2}}"></image>
			</swiper-item>
		</swiper>
		<view class="title">
			{{item.name}}
		</view>
		<view class="comm-price">
			<image src="../../img/钱.png"></image>{{item.price}}
		</view>
		<view class="info">图文详情</view>
		<view class="info-flex">
			<view class="flex1">产地 <view class="flex2">{{item.location}}</view>
			</view>
			<view class="flex1">规格 <view class="flex2">{{item.Spec}}</view>
			</view>
			<view class="flex1">保质期 <view class="flex2">{{item.date}}</view>
			</view>
		</view>
		<image src="{{item.img1}}"></image>
	</block>

</view>